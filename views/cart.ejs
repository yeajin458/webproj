<form method="POST" action="/purchase/a_process">
  <table class="table table-bordered border-primary">
    <tr>
      <th>구매 선택</th>
      <th>상품</th>
      <th>상품명</th>
      <th>단가</th>
      <th>담은날</th>
      <th>수량</th>
    </tr>

    <% for (var i = 0; i < lists.length; i++) { %>
      <tr>
        <td>
          <input type="checkbox" name="item[<%= i %>][selected]" value="1" />
          <input type="hidden" name="item[<%= i %>][cart_id]" value="<%= lists[i].cart_id %>"/>
        </td>
        <td><img src="/images/<%= lists[i].image %>" style="width:100px;height:100px;" /></td>
        <td><%= lists[i].product_name %></td>
        <td><%= lists[i].product_price.toLocaleString('ko-KR') %> 원</td>
        <td><%= lists[i].date %></td>
        <td>
          <input class="form-control" type="text" name="item[<%= i %>][qty]" value="1" style="width:80px;" />
          <input type="hidden" name="item[<%= i %>][prod_id]" value="<%= lists[i].prod_id %>"/>
          <input type="hidden" name="item[<%= i %>][price]" value="<%= lists[i].product_price %>"/>
        </td>
      </tr>
    <% } %>

  </table>
  <% if (list.length === 0) { %>
  <p>자료가 없으니  추가해 주십시오.</p>
<% } %>


  <button class="btn btn-outline-primary btn-sm" type="submit" formaction="/purchase/a_process">결제</button>
  <button class="btn btn-outline-primary btn-sm" type="submit" formaction="/purchase/delete_process" onclick="if(confirm('정말로 삭제하시겠습니까?')==false) return false">삭제</button>
  <a class="btn btn-outline-primary btn-sm" href="/">상품목록 돌아가기</a>
</form>


